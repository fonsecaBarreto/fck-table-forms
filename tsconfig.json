{
  "compilerOptions": {
    "outDir": "lib",   
    "target": "es5",
    "jsx": "react-jsx",     
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],  
    "moduleResolution": "node",
    "declaration": true,                             
    "declarationMap": true,                          
    "sourceMap": true,                                                        
    "esModuleInterop": true,                          
    "strict": true,                                  
    "skipLibCheck": true,                            
    "rootDirs": ["src"],
    "baseUrl": ".",
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [ "./src/*" ],
      "@tests/*": [  "./tests/*"  ],
      "@lib/*": [  "./lib/*"  ]
    },
    "diagnostics": true,
  },
  "typeRoots": [
      "./@types",
      "./node_modules/@types"
  ],
  "include": ["src", "examples"],
  "exclude": ["node_modules", "lib"]
}